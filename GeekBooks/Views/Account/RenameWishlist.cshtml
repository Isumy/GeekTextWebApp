@model GeekBooks.ViewModels.RenameWishlist
@{
    ViewBag.Title = "RenameWishlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rename Wishlist</h2>
@using (Html.BeginForm("SaveRenameWishlist", "Account", new { oldName = Model.oldName, wishlist = Model.Wishlist }))
{
    <div class="form-group">
        @Html.LabelFor(w => w.Wishlist.WishlistName)
        @Html.TextBoxFor(w => w.Wishlist.WishlistName, new { @class = "form-control" })
    </div>
    @Html.TextBoxFor(w => w.Wishlist.Username, new { @class = "form-control" })
    @Html.TextBoxFor(w => w.Wishlist.Preferred, new { @class = "form-control" })

    <button type="submit" class="btn btn-primary">Save</button> 
    @Html.ActionLink("Cancel", "Wishlist", "Account", null, new { @class = "btn btn-primary btn-small" })
}