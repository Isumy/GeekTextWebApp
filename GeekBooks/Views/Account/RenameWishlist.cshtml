@model GeekBooks.Wishlist
@{
    ViewBag.Title = "RenameWishlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ string oldWishlistName = Model.WishlistName; }

<h2>Add Wishlist</h2>
@using (Html.BeginForm("SaveRenameWishlist", "Account", new { oldName = oldWishlistName, wishlist = Model.WishlistName}))
{
    <div class="form-group">
        @Html.LabelFor(w => w.WishlistName)
        @Html.TextBoxFor(w => w.WishlistName, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(w => w.Username)

    <button type="submit" class="btn btn-primary">Save</button> 
    @Html.ActionLink("Cancel", "Wishlist", "Account", null, new { @class = "btn btn-primary btn-small" })
}