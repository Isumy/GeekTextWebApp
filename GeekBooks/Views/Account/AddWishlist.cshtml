@model GeekBooks.Wishlist
@{
    ViewBag.Title = "AddWishlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Wishlist</h2>
@using (Html.BeginForm("SaveWishlist", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(w => w.WishlistName)
        @Html.TextBoxFor(w => w.WishlistName, new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(w => w.Preferred) Make this the preferred wishlist
        </label>
    </div>
    @Html.HiddenFor(w => w.Username)
    <button type="submit" class="btn btn-primary">Save</button> @Html.ActionLink("Cancel", "Wishlist", "Account", null, new { @class = "btn btn-primary btn-small" })
}