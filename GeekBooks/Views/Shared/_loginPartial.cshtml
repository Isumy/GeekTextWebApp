@if (Session["Email"] == null)
{
    <ul class=" nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Register", "Register", "Account", new { area = "" }, new { @class = "navbar" })
        </li>
        <li>
            @Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { @class = "navbar" })
        </li>
    </ul>

}
else
{
    <ul class=" nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + Session["Email"] + "!", "Index", "Home", new { area = "" }, new { @class = "navbar" })
        </li>
        <li>
            @Html.ActionLink("Logout", "Logout", "Account", new { area = "" }, new { @class = "navbar" })
        </li>
    </ul>

}

